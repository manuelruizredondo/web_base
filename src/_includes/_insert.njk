  <div class="line-w"></div>
  <div class="column-grid">
    <div>
      <div class="btn btn-swipe tag-btn">
        <span class="fluid-48-l" data-label="{{año}}"><span> {{año}}</span></span>
      </div>
    </div>
    <div class="">
      <div class="fluid-6-b mb-8">{{nombre}}</div>
      <div class="text-12-r">{{descripcion}}</div>
    </div>

{% macro splitenpalabras(frase = '') %}

  {% set palabras = frase.split(" ") %}
  
  <span>
    {% for palabra in palabras %}
    {% if palabra.startsWith('**') %}
    <span class="word bold">{{ palabra | replace('**', '') }}</span>
    {% elseif palabra == '--' %}

    {{ palabra | replace('--', '<br>') | safe }}


      {% else %}
        <span class="word">{{ palabra }}</span>
      {% endif %}
    {% endfor %}
  </span>
{% endmacro %}




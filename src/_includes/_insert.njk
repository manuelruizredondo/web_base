{% macro splitenpalabras(frase = '', animationDelay='' ) %}



{%set animationTime = 140 %}

{% set palabras = frase.split(" ") %}



<span>
  {% for palabra in palabras %}

     {% if palabra.startsWith('**') %}
        <span class="word bold" style="animation-delay: {{ animationDelay }}ms ">{{ palabra | replace('**', '') }}</span>
     {% elseif palabra == '--' %}
        {{ palabra | replace('--', '<br>') | safe }}
     {% else %}
        <span class="word" style="animation-delay: {{ animationDelay }}ms ">{{ palabra }}</span>
     {% endif %}

{% set  animationDelay = animationDelay + animationTime %}

  {% endfor%}
</span>
{% endmacro %}



{% macro faqs(faqs1 = '', faqs2='') %}
<div class="accordion">
  <div class="accordion-inner">
    <div class="accordion-header is-flex">
      <div class="fluid-8-r mt-4">
        {{ faqs1 }}
      </div>
      <div class="list-circle ml-24">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
          <title>down-arrow</title>
          <g stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" fill="none" stroke="#212121"
            stroke-miterlimit="10">
            <polyline points="2,7 12,17 22,7 " transform="translate(0, 0)"></polyline>
          </g>
        </svg>
      </div>
    </div>
    <div class="accordion-content">
      <div class="text-14-r mt-16">
        {{ faqs2 }}
      </div>
    </div>
  </div>
</div>
{% endmacro %}



{% macro timeline(año = '', nombre = '',descripcion = '', especialidad = '', imagen = '' ) %}
